<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grid_item_bg" >

    <TextView
        android:id="@+id/dateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/item_date"
        android:textSize="@dimen/grid_item_txt_size" />

    <ImageView
        android:id="@+id/statusImageView"
        android:layout_width="@dimen/grid_item_width"
        android:layout_height="@dimen/grid_item_height"
        android:layout_alignTop="@+id/dateTextView"
        android:layout_toLeftOf="@+id/dateTextView"
        android:contentDescription="@string/app_name"
        android:src="@drawable/img_paid"
        android:visibility="gone" />

</RelativeLayout>